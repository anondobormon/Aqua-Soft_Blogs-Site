    <section class="">
      <!-- Side bar -->
      <div>
        <div class="d-flex">
          <div class="dashboard-sidebar">
            <h3>Logo HERE</h3>
            <ul>
              <li class="active">
                <a href=""><i class="fas fa-th-large"></i>Dashboard</a>
              </li>
              <li>
                <a href=""><i class="fas fa-clipboard-list"></i>Author's</a>
              </li>
              <li>
                <a href="/admin/blogs"
                  ><i class="far fa-newspaper"></i>Blog's</a
                >
              </li>

              <li>
                <a href=""><i class="fas fa-th-signout"></i>Logout</a>
              </li>
            </ul>
          </div>
          <!-- Dashboard Header -->
          <div class="dashboard-details">
            <div class="das-header d-flex">
              <h2>Dashboard</h2>
              <div class="search">
                <span><i class="fas fa-users"></i></span>
                <input type="text" placeholder="Search here" name="search" />
              </div>
              <div class="admin-photo">
                <div class="admin-img">
                  <img src="/uploads/doctor-(10)-1630510943995.jpg" alt="" />
                </div>
                <div class="admin-position">
                  <h6>John Doe</h6>
                  <p>Admin Position</p>
                </div>
              </div>
            </div>
            <div class="dashboard-card">
              <div class="row m-4">
                <div class="col-md-3">
                  <div class="count-card">
                    <div class="count">
                      <h1>60</h1>
                      <p>Users</p>
                    </div>
                    <p><i class="fas fa-users"></i></p>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="count-card">
                    <div class="count">
                      <h1>100+</h1>
                      <p>Author</p>
                    </div>
                    <p><i class="fas fa-user"></i></p>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="count-card">
                    <div class="count">
                      <h1>20K+</h1>
                      <p>Article's</p>
                    </div>
                    <p><i class="far fa-newspaper"></i></p>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="count-card">
                    <div class="count">
                      <h1>5+</h1>
                      <p>Category's</p>
                    </div>
                    <p><i class="fas fa-users"></i></p>
                  </div>
                </div>
              </div>
            </div>
            <!-- Table of Contents -->
            <div class="table-content">
              <div class="row">
                <!-- Users -->
                <div class="col-md-12 bg-light p-4 users">
                  <div class="blogs">
                    <h4>New users</h4>
                    <button>See all <i class="fas fa-arrow-right"></i></button>
                  </div>
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">SL</th>
                        <th scope="col">Author Name</th>
                        <th scope="col">Author Email</th>
                        <th scope="col">Creation Date</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% user.forEach((user, index) => {%>
                      <tr>
                        <th><%= index + 1 %></th>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.date %></td>
                        <td>
                          <a href="/admin/dashboard/update/"
                            ><i class="fas fa-edit"></i
                          ></a>
                        </td>
                        <td>
                          <a href="/admin/dashboard/delete/"
                            ><i class="fas fa-trash-alt"></i
                          ></a>
                        </td>
                      </tr>
                      <%}) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

